@{
    @using WebClient.Models;
    @model List<Centre>;
}
<div id="loginBtn">
    <button id="loginbutton" onclick="loginBtnClick(loggedIn)">Login/Logout</button>
</div>
<div id="tablename" class="anonymous">
    <h3>Centre Table</h3>
</div>
<div id="centreTable">
    <table>

        @foreach(var c in Model)
        {
            <tr>
                <td>@c.centreName</td>
            </tr>
        }
    </table>
</div>

<div id="addcentrebtn" class="admin">
    <button id="addBtn" onclick="addCentre()" >Add Centre</button>
</div>
<script>
console.log(sessionStorage.getItem("login"));
var loggedIn;
if (sessionStorage.getItem("login") != null) {
    loggedIn = sessionStorage.getItem("login");

}
else {
    loggedIn = false;
}
</script>
<script>
function loginBtnClick(l) {
    if (l == false) {
        let username = prompt("Enter Username");
        let password = prompt("Enter Password");
        login(username, password);
    }
    else {
        alert("Logged out");
        loginbutton.textContent = 'Login';
        loggedIn = false;
        sessionStorage.setItem("login",false);
    }
}

    function login(user,pass) 
    { 
        var log = false;
        $.ajax({
            type: 'POST',
            url: '/home/login?username='+user+'&password='+pass,
            contentType: 'application/json',
            success: function(data, textStatus, jQxhr)
            {
                log = true;
                alert("logged in");
                console.log(log);
                sessionStorage.setItem("login",log);
                changeBtn(log);
            },
            error: function(xhr, textStatus, error)
            {
                alert("username or password incorrect");
                console.log(xhr.statusText);
                console.log(textStatus);
                console.log(error);
            }
        });
    }
function changeBtn() {
    loginbutton.textContent = 'Log Out';
    loggedIn = true;
}
 function addCentre() 
    { 
        let name = prompt("Enter Centre Name");
        $.ajax({
            type: 'POST',
            url: '/home/AddCentre/',
            contentType: 'application/json',
            data: JSON.stringify(
            {
                "centreName": name
            }),
            success: function(data, textStatus, jQxhr)
            {
                alert("Centre Added");
            },
            error: function(xhr, textStatus, error)
            {
                alert("Error");
                console.log(xhr.statusText);
                console.log(textStatus);
                console.log(error);
            }
        });
    }
</script>


